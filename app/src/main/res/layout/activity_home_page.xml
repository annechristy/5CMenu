<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/AppTheme"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1.0">


    <TextView
        android:id="@+id/main_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:textSize="33sp"
        android:text="@string/textview"/>


    <!-- Set OnClickListener to trigger results when pressed -->
    <Button
        style="@style/button"
        android:background="@drawable/stylish_button"
        android:id="@+id/first_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight=".14"
        android:layout_marginTop="10dp"
        android:text="@string/button1" />
    <Button
        style="@style/button"
        android:background="@drawable/stylish_button"
        android:layout_marginTop="10dp"
        android:id="@+id/second_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight=".14"
        android:text="@string/button2" />

    <Button
        style="@style/button"
        android:background="@drawable/stylish_button"
        android:layout_marginTop="10dp"
        android:id="@+id/third_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight=".14"
        android:text="@string/button3" />
    <Button
        style="@style/button"
        android:background="@drawable/stylish_button"
        android:layout_marginTop="10dp"
        android:id="@+id/fourth_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight=".14"
        android:text="@string/button4" />
    <Button
        style="@style/button"
        android:background="@drawable/stylish_button"
        android:layout_marginTop="10dp"
        android:id="@+id/fifth_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight=".14"
        android:text="@string/button5" />
    <Button
        style="@style/button"
        android:background="@drawable/stylish_button"
        android:layout_marginTop="10dp"
        android:id="@+id/sixth_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight=".14"
        android:text="@string/button6" />
    <Button
        style="@style/button"
        android:background="@drawable/stylish_button"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/seventh_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight=".14"
        android:text="@string/button7" />



    <View
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="10dp"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/textgray"/>

    <TextView
        android:id="@+id/copywrite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:textSize="10sp"
        android:text="\u00A9 2014 Anne Christy and Hannah Turk"/>


</LinearLayout>
