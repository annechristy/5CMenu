<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"


    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/hall_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="@dimen/hochTitleSize"
        android:text="Dining Hall Name"/> <!-- Set in MenuPage.java -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gold"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/meal_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="4"

                android:textSize="@dimen/hochMealSize"
                android:textColor="@color/black"
                android:text="@string/meal"/>

            <TextView
                android:id="@+id/meal_time_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"

                android:textSize="@dimen/hochMealHoursSize"
                android:textColor="@color/black"
                android:text="@string/hours"/>



        </LinearLayout>


    <!-- List whose dataset is defined in code with an adapter -->
    <ListView
        android:id="@+id/hoch_breakfast_listview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="20dp" />


</LinearLayout>